<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Security Dashboard</title>
    <link rel="stylesheet" href="/styles.css"> <!-- Add your CSS file -->
</head>
<body>
    <h1>Security Guard Dashboard</h1>

    <!-- Register Visitor Button -->
    <button onclick="window.location.href='/security/visitor-form'">Register Visitor</button>

    <!-- Logout Button -->
    <button id="logoutBtn">Logout</button>

    <script>
        document.getElementById("logoutBtn").addEventListener("click", async () => {
            try {
                const response = await fetch("/api/auth/logout", { method: "POST" });
                if (response.ok) {
                    window.location.href = "/api/auth/login"; // Redirect to login page after logout
                } else {
                    alert("Logout failed. Try again.");
                }
            } catch (error) {
                console.error("‚ùå Logout Error:", error);
                alert("Something went wrong!");
            }
        });
    </script>
</body>
</html>
